<body class="cityPostPage sanFran">

<header class="intro-header">
	<div class="container">
		
		<div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading text-center">
					<h1>Welcome to <%= @city.name %>! </h1>
					<%= image_tag("#{@city.id}.jpg") %>
					<hr class="small">

					<% if signed_in? %>
                    	<h4><span class="subheading">Tell us what you think <%= button_to "Create A Post", new_city_post_path(@city.id), method: :get, class: "btn btn-primary" %></span></h4>
                    <% end %>
                </div> <br>
                
            </div> <br>
        </div>
</header>
		<br>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="post-preview">
				<% @allPosts.each do |post| %>
					<h5 class="post-title postPage"> <%= image_tag("vista.jpeg", :alt => "scenic vista") %> <%= link_to post.title, city_post_path(@city.id, post.id) %> 
					</h5>
					<h4 class="post-subtitle postPage">   Posted <%= time_ago_in_words(relative_time(post)) %> ago!</h4> <br>
			
					<p class="postBody post-meta"><%= truncate(post.body, length: @length) %>
						<% if truncate?(post.body) %>
							<%= link_to "Read More", city_post_path(@city.id, post.id) %>
					</p>
						<% end %>
						<hr class="small">
						<br><br>
				<% end %>
				 
			</div>
		</div>
	</div>
	</div>
</body>
